<script>
  // Service Content Array
  const services = [
    {
      title: "Air Conditioner Repair",
      description:
        "Air conditioners need regular maintenance to function properly. We provide cleaning, tune-ups, and full repair services.",
      image: "/path/to/air-conditioner.jpg",
    },
    {
      title: "Cooktop Repair",
      description:
        "Cooktops are essential kitchen appliances. We repair electrical, gas, and induction cooktops to ensure smooth operation.",
      image: "/path/to/cooktop.jpg",
    },
    {
      title: "Dishwasher Repair",
      description:
        "Dishwashers save time and effort. Our team fixes water drainage, leaks, and operational issues effectively.",
      image: "/path/to/dishwasher.jpg",
    },
  ];

  // Function to Show Service Content on Desktop
  function showServiceContent(index) {
    const content = services[index];
    document.getElementById("service-title").innerText = content.title;
    document.getElementById("service-description").innerText =
      content.description;

    document.getElementById("service-content").innerHTML = `
      <img src="${content.image}" alt="${content.title}" class="w-full mb-4 rounded-md" />
      <h3 class="text-3xl font-bold mb-4">${content.title}</h3>
      <p>${content.description}</p>
    `;
  }

  // Accordion Function for Mobile
  function toggleAccordion(index) {
    const contents = document.querySelectorAll(".accordion-content");
    contents[index].classList.toggle("hidden");
  }
</script>







